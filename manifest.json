{
    "name": "yCtrl",
    "version": "1.0",
    "description": "Minimalistic Youtube Controller",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "yCtrl",
        "default_popup": "popup.html"
      },
    "permissions": [
        "<all_urls>",
        "tabs"
    ],
    "manifest_version": 2
}